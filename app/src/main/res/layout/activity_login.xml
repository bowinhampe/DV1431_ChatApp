<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hampus.dv1431_chatapp.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:layout_above="@id/loginActivity_login_btn"
            android:textAlignment="center">

        </TextView>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:id="@+id/loginActivity_login_btn"
            android:text="@string/btn_login">
         </Button>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/loginActivity_login_btn"
            android:layout_centerInParent="true"
            android:id="@+id/loginActivity_register_btn"
            android:text="@string/btn_register">
        </Button>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
